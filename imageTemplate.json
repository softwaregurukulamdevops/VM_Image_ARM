{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Template to capture VM image and create image version in compute gallery"
  },
  "parameters": {
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the source virtual machine"
      }
    },
    "vmResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group of the source VM"
      }
    },
    "computeGalleryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the compute gallery"
      }
    },
    "computeGalleryResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group of the compute gallery"
      }
    },
    "imageDefinitionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the image definition"
      }
    },
    "imageVersionName": {
      "type": "string",
      "metadata": {
        "description": "Version of the image to create"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for resources"
      }
    },
    "replicaCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of replicas for the image version"
      }
    },
    "targetRegions": {
      "type": "array",
      "defaultValue": [
        {
          "name": "[resourceGroup().location]",
          "regionalReplicaCount": 1,
          "storageAccountType": "Premium_LRS"
        }
      ],
      "metadata": {
        "description": "Target regions for image replication"
      }
    }
  },
  "variables": {
    "imageDefinitionResourceId": "[resourceId(parameters('computeGalleryResourceGroup'), 'Microsoft.Compute/galleries/images', parameters('computeGalleryName'), parameters('imageDefinitionName'))]",
    "vmResourceId": "[resourceId(parameters('vmResourceGroup'), 'Microsoft.Compute/virtualMachines', parameters('vmName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/galleries/images/versions",
      "apiVersion": "2022-03-03",
      "name": "[concat(parameters('computeGalleryName'), '/', parameters('imageDefinitionName'), '/', parameters('imageVersionName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "publishingProfile": {
          "replicaCount": "[parameters('replicaCount')]",
          "targetRegions": "[parameters('targetRegions')]",
          "excludeFromLatest": false
        },
        "storageProfile": {
          "source": {
            "id": "[variables('vmResourceId')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "imageVersionResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/galleries/images/versions', parameters('computeGalleryName'), parameters('imageDefinitionName'), parameters('imageVersionName'))]"
    },
    "imageVersionName": {
      "type": "string",
      "value": "[parameters('imageVersionName')]"
    }
  }
}
